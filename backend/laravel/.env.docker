# Production Environment Configuration
# Copy this file to .env in the backend/laravel directory

APP_NAME="Booking System"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:8100
APP_TIMEZONE=Asia/Phnom_Penh

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=booking_system
DB_USERNAME=booking_user
DB_PASSWORD=booking_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="Booking System"

# KHQR Payment Configuration
KHQR_BASE_URL=https://api-bakong.nbc.gov.kh
KHQR_MERCHANT_ID=khun_meas@aclb
KHQR_ACCOUNT_ID=khun_meas@aclb
KHQR_CURRENCY=KHR
KHQR_TIMEOUT=300

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_TTL=60

# File Upload Configuration
MAX_FILE_SIZE=10240
UPLOAD_PATH=storage/uploads

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=error

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8100
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8100
